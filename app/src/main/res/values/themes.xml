<resources>
    <!-- Base application theme. -->
    <style name="Theme.RanepaMap" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ranepa_red</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/ranepa_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/ranepa_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/ranepa_gray</item>
    </style>

    <style name="Theme.SplashScreen" parent="Theme.RanepaMap">
        <item name="android:windowBackground">
            @drawable/splash_screen
        </item>
        <item name="colorPrimaryDark">@android:color/white</item>
    </style>
</resources>